<Page x:Class="Regress.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Regress"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Grid.Column="1"
               FontFamily="Comfortaa"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               FontSize="55"
               FontWeight="Bold"
               Content="КОРРЕЛЯЦИОННАЯ"/>
        <Label Grid.Row="1"
               Grid.Column="1"
               FontFamily="Comfortaa"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="45"
               FontWeight="Bold"
               Content="РЕГРЕССИЯ"/>
        <Button Grid.Row="2" 
                Grid.Column="1" 
                MaxWidth="250" 
                FontSize="20"
                FontFamily="Comfortaa"
                BorderThickness="4"
                Foreground="White"
                Background="Black"
                FontWeight="Bold"
                Content="ВЫБРАТЬ ФАИЛ" Click="Button_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border CornerRadius="30" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="Red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Page>
